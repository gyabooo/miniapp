.card.col.s4
  .card-title.post__title=post.title
  .divider
  .card-content
    - if post.text.scan("\n").count > 1
      .post__text=simple_format(h(post.text.split("\n")[0])) + "\n...more"
    - else
      .post__text=simple_format(h(post.text).truncate(20, omission: "\n...more"))
  = link_to "#", class: "post__btn--good" do
    %i{class: "Tiny material-icons post__btn--icon"} thumb_up
  .card-action
    =link_to "詳細", post_path(post), class: 'default-btn'
    - if user_signed_in? && post.user_id == current_user.id
      =link_to "編集", edit_post_path(post), class: 'default-btn'
      =link_to "削除", "#destroy_modal_#{post.id}", class: 'modal-trigger default-btn'

  %div{id: "destroy_modal_#{post.id}", class: "modal modal-fixed-footer"}
    .modal-content
      %h4="本当に削除しますか？"
      .post__title=post.title
      .divider
      .post__text=simple_format(post.text)
    .modal-footer
      = link_to 'キャンセル', '#!', class: "modal-close btn-flat"
      = link_to "削除", "/posts/#{post.id}", method: :delete, class: 'default-btn'